<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="0dp"
        android:layout_weight="18">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/content_logo"
            android:scaleType="center"
            android:src="@drawable/udacity_logo" />

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="15"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="2"
        android:text="@string/company_name"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/content_map"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/map"
            android:onClick="openMap"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:layout_gravity="center_vertical"
            android:text="@string/company_address"
            android:textColor="#9e9e9e"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/content_phone"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/phone"
            android:onClick="openDialer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/company_telephone"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/content_web"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/web"
            android:onClick="openBrowser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/company_web"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/content_mail"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/mail"
            android:onClick="openMail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/company_email"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/content_facebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/facebook"
            android:onClick="openFacebook"/>

        <ImageView
            android:contentDescription="@string/content_twitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/twitter"
            android:onClick="openTwitter"/>

        <ImageView
            android:contentDescription="@string/content_linkedin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/linkedin"
            android:onClick="openLinkedIn"/>

        <ImageView
            android:contentDescription="@string/content_instagram"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/instagram"
            android:onClick="openInstagram"/>

        <ImageView
            android:contentDescription="@string/content_google"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/google"
            android:onClick="openGoogle"/>

    </LinearLayout>

</LinearLayout>

