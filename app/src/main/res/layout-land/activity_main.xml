<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:contentDescription="@string/content_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:id="@+id/background_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/content_logo"
        android:scaleType="center"
        android:src="@drawable/udacity_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/background_image"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="@string/company_name"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/company_name"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/content_map"
        android:onClick="openMap"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/map"
        android:layout_below="@id/company_name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/map_icon"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/company_address"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:layout_below="@id/company_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/map_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/content_phone"
        android:onClick="openDialer"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/phone"
        android:layout_below="@id/map_icon"
        android:layout_marginLeft="24dp"
        android:id="@+id/phone_icon"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/company_telephone"
        android:textColor="#9e9e9e"
        android:textSize="14sp"

        android:layout_below="@id/map_icon"
        android:layout_toRightOf="@id/phone_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/content_web"
        android:onClick="openBrowser"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/web"
        android:layout_below="@id/company_name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/web_icon"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/company_web"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:layout_below="@id/company_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/web_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/content_mail"
        android:onClick="openMail"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mail"
        android:layout_below="@id/map_icon"
        android:layout_marginLeft="300dp"
        android:id="@+id/mail_icon"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/company_email"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:layout_below="@id/map_icon"
        android:layout_toRightOf="@id/mail_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_facebook"
        android:onClick="openFacebook"
        android:padding="12dp"
        android:src="@drawable/facebook"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/twitter_icon"
        android:id="@+id/facebook_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_twitter"
        android:onClick="openTwitter"
        android:padding="12dp"
        android:src="@drawable/twitter"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/linkedin_icon"
        android:id="@+id/twitter_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_linkedin"
        android:onClick="openLinkedIn"
        android:padding="12dp"
        android:src="@drawable/linkedin"
        android:layout_alignParentBottom="true"
        android:id="@+id/linkedin_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_instagram"
        android:onClick="openInstagram"
        android:padding="12dp"
        android:src="@drawable/instagram"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/linkedin_icon"
        android:id="@+id/instagram_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_google"
        android:onClick="openGoogle"
        android:padding="12dp"
        android:src="@drawable/google"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/instagram_icon"
        android:id="@+id/google_icon"/>

</RelativeLayout>


